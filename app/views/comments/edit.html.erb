<h3>Edit Comment</h3>

<%= render partial: "layouts/errors", locals: {object: @comment} %>
<div>
    <%= form_for(@comment) do |f|%>

      <div class="form-group">

        <%= f.label :content %>
        <%= f.hidden_field :poem_id %>
        <%= f.text_field :content %>
      <./div>

      <%= f.submit, class: "btn btn-primary" %>

    <% end %>
</div>

