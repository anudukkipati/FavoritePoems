
<% if @poem %>
  <h3>Comments for <%= @poem.title%></h3>
<% else %>
  <h1>All Comments</h1>
<% end %>

<div>
<% @comments.each do |comment|%>
  <h4><strong><%= comment.user.name%></strong></h4>
  <p><em><%= comment.content%></em> <%= link_to comment.poem.title, poem_path(comment.poem_id) %></p>
    <% if comment.user == current_user %>
      
        <%= link_to "Edit", edit_poem_comment_path(comment.poem.id, comment.id), class: "btn btn-warning btn-xs"%>
        <br><br>
      
        <%= button_to "Delete", { action: "destroy", id: comment.id },
                                method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-xs" %>
    <% end %>
<% end %>
</div>
