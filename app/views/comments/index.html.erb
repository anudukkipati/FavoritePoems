
<% if @poem %>
  <h3>Comments for <%= @poem.title%></h3>
<% else %>
  <h1>All Comments</h1>
<% end %>

<div>
<% @comments.each do |comment|%>
  <h4><strong><%= comment.user.name%></strong> says <em><%= comment.content%></em> <%= link_to comment.poem.title, poem_path(comment.poem_id) %></h4>
<% end %>
</div>
<%#= link_to "Edit Comment", edit_poem_comment_path(@poem,@comment.id) %>



<p><%= link_to "Go Back to the Poem", poem_path(@poem) %></p>