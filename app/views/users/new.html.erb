<%= render partial: "layouts/errors", locals: {object: @user} %>
<div class="row" >
  <<div class="form-container">
    <h3>Sign Up</h3>
    <%= form_for(@user, url:'/signup') do |f| %>
      <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
      </div>
      
      <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email%>
      </div>

      <div class="form-group">
      
          <%= f.label :password %><br>
          <%= f.password_field :password %>
      </div>
      

      <%= f.submit "Submit", class: "btn btn-primary" %>

    <% end %>
    
    <br>
     <%= link_to "Log In With Google", '/auth/google_oauth2' , class: "btn btn-primary"%>
    </div>
</div>