<div class="form-div">
  <!--<div class="col-md-6 col-md-offset-3">-->
    <%= form_for(@poem) do |f|%>
     <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :size=>"48" %>
     </div>
     <br><br>
     <div class="form-group">
        <%= f.label :content %>
        <br>
       
        <%= f.text_area :content, :cols => 50, :rows => 20 %>
      </div>
     <br><br>
     <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
    <% end %>
 <!-- </div>-->
</div>